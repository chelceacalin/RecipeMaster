<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMaster.CreditsPage"
             Title="Credits"
             BackgroundColor="#1e1e1e">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="OnBackClicked" Priority="0" Order="Primary" />
        <ToolbarItem Text="Main Page" Clicked="OnMainPageClicked" Priority="1" Order="Primary" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="5" Spacing="5">

            <Label Text="SIMPRE"
                   FontSize="Small"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="SkyBlue"
                   Margin="0,5,0,5" />
            <Label Text="Academia de Studii Economice din Bucuresti"
                   FontSize="Small"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="SkyBlue"
                   Margin="0,5,0,5" />
            <Label Text="Programarea dispozitivelor mobile"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="OrangeRed"
                   Margin="0,5,0,5" />
            <Label Text="RecipeMaster - Aplicatie de gestiune retete culinare"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Gold"
                   Margin="0,5,0,5" />

            <StackLayout Spacing="20" Padding="10, 20, 10, 0">
                <Label Text="Profesor" FontSize="Medium" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                <Frame BackgroundColor="#333333" Padding="10" CornerRadius="8">
                    <Label Text="Paul Pocatilu" FontSize="Small" TextColor="LightGray" />
                </Frame>
            </StackLayout>

            <StackLayout Spacing="20" Padding="10, 20, 10, 0">
                <Label Text="Studenti" FontSize="Medium" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                <Frame BackgroundColor="#333333" Padding="10" CornerRadius="8">
                    <Label Text="Chelcea Calin Marius" FontSize="Small" TextColor="LightGray" />
                </Frame>
                <Frame BackgroundColor="#333333" Padding="10" CornerRadius="8">
                    <Label Text="Costan Sergiu Andrei" FontSize="Small" TextColor="LightGray" />
                </Frame>
                <Frame BackgroundColor="#333333" Padding="10" CornerRadius="8">
                    <Label Text="Neagu Iuliana Alexandra" FontSize="Small" TextColor="LightGray" />
                </Frame>
            </StackLayout>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Padding="0, 10, 0, 0">

                <Button x:Name="DownloadDocxButton"
        Text="Download DOCX"
        BackgroundColor="#4169E1"
        TextColor="White"
        FontAttributes="Bold"
        CornerRadius="8"
        WidthRequest="150"
        Clicked="OnDownloadDocxClicked" />

                <Button Text="Download PDF"
        BackgroundColor="Tomato"
        TextColor="White"
        FontAttributes="Bold"
        CornerRadius="8"
        WidthRequest="150"
        Clicked="OnDownloadPdfClicked" />
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
